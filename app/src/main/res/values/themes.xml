<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Base.AppTheme" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:windowAnimationStyle">@style/CstAnim</item>
    <!-- Customize your theme here. -->
    <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
  </style>
    
  <style name="Conversation" parent="Theme.Material3.Dark">
        <item name="android:fontFamily">@font/google</item>
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">#FF006FFA</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowAnimationStyle">@style/CstAnim</item>
  </style> 
    
    <style name="Login" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:fontFamily">@font/google</item>
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">#FF006FFA</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowAnimationStyle">@style/CstAnim</item>
  </style>  

  <style name="AppTheme" parent="Base.AppTheme">
        <item name="android:fontFamily">@font/google</item>
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowFullscreen">false</item>
        <item name="colorAccent">#FF006FFA</item>
  </style>
    <style name="AppTheme2" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:fontFamily">@font/google</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowFullscreen">false</item>
        <item name="colorAccent">#FF006FFA</item>
  </style>
    <style name="Theme.Transparent" parent="@android:style/Theme.Material">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="CstAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>
</resources>